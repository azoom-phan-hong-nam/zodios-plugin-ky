{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@constants/*": ["./constants/*"],
      "@endpoints/*": ["./endpoints/*"],
      "@helpers/*": ["./helpers/*"],
      "@lib/*": ["./lib/*"],
      "@middleware/*": ["./middleware/*"],
      "@routes/*": ["./routes/*"]
    },
    "typeRoots": ["./@types"],
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
